{
  "name": "feedback-web-component",
  "version": "1.0.0",
  "source": "src/index.js",
  "main": "dist/feedback-component.min.modern.js",
  "license": "private",
  "scripts": {
    "serve": "serve",
    "build:js": "microbundle --css inline -o dist/feedback-component.min.js",
    "build:css": "sass src/styles.scss dist/styles.css",
    "watch:css": "yarn build:css --watch",
    "build": "yarn build:css && yarn build:js",
    "dev": "yarn build:css && concurrently \"serve\" \"yarn watch:css\" \"yarn build:js watch\"",
    "lint": "eslint ./src",
    "test": "yarn serve & wait-on http://localhost:5000 && cypress run",
    "cypress:open": "cypress open"
  },
  "devDependencies": {
    "@ramseyinhouse/eslint-config": "^1.0.3",
    "concurrently": "^5.3.0",
    "cypress": "^6.6.0",
    "eslint": "^7.21.0",
    "husky": "^5.1.2",
    "lint-staged": "^10.5.4",
    "microbundle": "^0.13.0",
    "prettier": "^2.2.1",
    "sass": "^1.32.5",
    "serve": "^11.3.2",
    "wait-on": "^5.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn run test --silent --coverage"
    }
  },
  "lint-staged": {
    "!(dist/*).{js,css,json,md}": "prettier ./src --write",
    "!(dist/*).js": "eslint --fix"
  }
}
