{
  "name": "feedback-web-component",
  "version": "1.0.0",
  "source": "src/index.js",
  "main": "dist/feedback-block.min.modern.js",
  "license": "private",
  "scripts": {
    "serve": "serve",
    "build:js": "microbundle --css inline -o dist/feedback-block.min.js",
    "build:css": "sass src/styles.scss dist/styles.css",
    "watch:css": "yarn build:css --watch",
    "build": "yarn build:css && yarn build:js",
    "dev": "yarn build:css && concurrently \"serve\" \"yarn watch:css\" \"yarn build:js watch\"",
    "lint": "eslint ./src",
    "test": "jest ./src"
  },
  "devDependencies": {
    "@ramseyinhouse/eslint-config": "^1.0.3",
    "@testing-library/dom": "^7.29.4",
    "@testing-library/jest-dom": "^5.11.9",
    "concurrently": "^5.3.0",
    "electron": "^11.2.2",
    "eslint": "^7.21.0",
    "gazelle-design-tokens": "^2.5.2",
    "husky": "^5.1.2",
    "jest": "^26.6.3",
    "jest-electron": "^0.1.11",
    "lint-staged": "^10.5.4",
    "microbundle": "^0.13.0",
    "prettier": "^2.2.1",
    "regenerator-runtime": "^0.13.7",
    "sass": "^1.32.5",
    "serve": "^11.3.2"
  },
  "jest": {
    "runner": "jest-electron/runner",
    "testEnvironment": "jest-electron/environment",
    "moduleNameMapper": {
      "\\.(css)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "setupFilesAfterEnv": [
      "./jest.setup.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn run test --silent --coverage"
    }
  },
  "lint-staged": {
    "!(dist/*).{js,css,json,md}": "prettier ./src --write",
    "!(dist/*).js": "eslint --fix"
  }
}
